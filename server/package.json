{
  "name": "@mono/server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.6.1"
  },
  "scripts": {
    "build": "tsup-node",
    "coverage": "DB_TYPE=pg-mem vitest run --coverage",
    "dev": "tsx watch src",
    "dev:mem": "DB_TYPE=pg-mem tsx watch src",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "migration:create": "tsx ../node_modules/typeorm/cli.js migration:create",
    "migration:generate": "tsx ../node_modules/typeorm/cli.js migration:generate -n src/database/migrations/$0 -d src/database/cli/dataSource.ts",
    "migration:revert": "tsx ../node_modules/typeorm/cli.js migration:revert -d src/database/cli/dataSource.ts",
    "migration:run": "tsx ../node_modules/typeorm/cli.js migration:run -d ./src/database/cli/dataSource.ts",
    "migration:show": "tsx ../node_modules/typeorm/cli.js migration:show -d src/database/cli/dataSource.ts",
    "start": "node ./dist/index.js",
    "test": "npm run test:mem",
    "test:mem": "DB_TYPE=pg-mem vitest",
    "test:db": "vitest",
    "type-check": "tsc --noEmit",
    "typeorm": "NODE_OPTIONS='-r tsconfig-paths/register' typeorm-ts-node-commonjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@tsconfig/node20": "^20.1.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.18",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/lodash": "^4.14.201",
    "@types/node": "^20.8.2",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.0",
    "@types/sendgrid": "^4.3.0",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "pg-mem": "^2.7.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^7.2.0",
    "tsx": "^3.13.0",
    "typescript": "^5.3.3",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "@trpc/server": "^10.41.0",
    "@types/pino": "^7.0.5",
    "auth": "^1.0.2",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "kysely": "^0.27.2",
    "list": "^2.0.19",
    "lodash": "^4.17.21",
    "neonctl": "^1.26.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "postgres": "^3.4.3",
    "projects": "^1.6.1",
    "ssl": "^1.0.0",
    "stripe": "^14.11.0",
    "superjson": "^2.2.1",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "zod": "^3.22.4",
    "zod-validation-error": "^2.1.0"
  },
  "tsup": {
    "clean": true,
    "bundle": true,
    "splitting": true,
    "sourcemap": true,
    "entry": [
      "src/index.ts",
      "src/database/migrations/*.ts"
    ],
    "format": [
      "esm"
    ],
    "external": [
      "@mikro-orm",
      "mysql",
      "pg-promise",
      "slonik",
      "sqlite3"
    ]
  }
}
